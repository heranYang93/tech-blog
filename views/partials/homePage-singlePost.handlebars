<section class="card">
  <h3>From singlePost</h3>
  <a href="/post/{{thisPostId}}">{{thisPostTitle}}</a>

  <div class="card-body">
    <p>this post content: {{thisPostContent}}</p>
    <p>this post create: {{thisPostCreate}}</p>
    <p>this post update: {{thisPostUpdate}}</p>
    <p>this post creator id: {{thisPostCreatorId}}</p>
    <p>this post creator name: {{thisPostCreatorUsername}}</p>
  </div>
</section>